<!DOCTYPE html>
<html lang="ko">
<%- include('../include/head'); -%>

<body>
    <header>
        <%- include('../include/header') -%>
    </header>
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col4 text-center">
                <h1>자유 게시판</h1>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-10">
                <table class="table">
                    <thead class="thead-dark">
                        <tr class="text-center">
                            <th>글번호</th>
                            <th width="70%">제목</th>
                            <th>글쓴이</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < list.length; i++)  { %>
                        <tr class="text-center">
                            <td><%= list[i].id %></td>
                            <td>
                                <a href="/board/view/<%= list[i].id %>">
                                    <%= list[i].title %>
                                </a>
                            </td>
                            <td><%= list[i].writer %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-10 justify-content-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                    <% if(pager.before) { %>
                        <li class="page-item">
                            <a class="page-link" href="/board?page=<%= pager.startPage -1 %>" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    <% } %>
                    <% for(let i = pager.startPage; i <= pager.endPage; i++ ) { %>
                        <li class="page-item"><a class="page-link" href="/board?page=<%= i %>"><%= i %></a></li>
                    <% } %>
                    <% if(pager.next) { %>
                        <li class="page-item">
                            <a class="page-link" href="/board?page=<%= pager.endPage + 1 %>" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    <% } %>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-10">
                <% if (locals.user)  { %>
                <div class="col-10">
                    <a href="/board/write" class="btn btn-primary">글쓰기</a>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('../include/footer') -%>
</body>

</html>

<!-- INSERT INTO boards (title, content, writer) (SELECT title, content, writer FROM boards) -->